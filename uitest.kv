MDScreen:
    name: "signup"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp"

        MDLabel:
            size_hint: 1, None
            height: "40dp"
            color: (0, 0, 1, 1)
            font_size: "25sp"
            text: "SIGN UP"

        ScrollView:
            bar_color: (0, 0, 1, 1)
            bar_width: "2dp"

            GridLayout:
                cols: 1
                spacing: "15dp"
                size_hint_y: None
                height: self.minimum_height

                MDTextField:
                    id: full_name
                    hint_text: "Full Name"

                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus: (0, 0, 1, 1)

                MDTextField:
                    id: email_id
                    hint_text: "Email ID"

                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus: (0, 0, 1, 1)

                MDTextField:
                    id: phone_no
                    hint_text: "Phone Number"

                    max_text_length: 10
                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus:( 0, 0, 1, 1)

                MDTextField:
                    id: password
                    hint_text: "Password"

                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus: (0, 0, 1, 1)

                MDTextField:
                    id: jdate
                    hint_text: "Joining Date"
                    mode: "rectangle"
                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus:( 0, 0, 1, 1)

                MDTextField:
                    id: spinner_id4
                    hint_text: "Department"
                    mode: "rectangle"
                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus: (0, 0, 1, 1)

                MDTextField:
                    id: spinner_id3
                    hint_text: "Designation"
                    mode: "rectangle"
                    line_color_normal: (0, 0, 1, 1)
                    line_color_focus: (0, 0, 1, 1)

                BoxLayout:
                    size_hint_y: None
                    height: "40dp"

                    Label:
                        text: "Select Gender"
                        size_hint_x: 0.4

                    Spinner:
                        id: spinner_id2
                        text: "Select Gender"
                        values: ["Male", "Female", "Others"]

                BoxLayout:
                    size_hint_y: None
                    height: "40dp"

                    Label:
                        text: "Select Employee Type"
                        size_hint_x: 0.4

                    Spinner:
                        id: spinner_id1
                        text: "Select Employee Type"
                        values: ["Admin", "Teaching", "Non-Teaching"]

                MDFillRoundFlatButton:
                    text: "Sign Up"
                        size_hint: 0.3, 0.05
                        pos_hint: {"center_x": 0.5, "center_y": 0.2}

                        on_release:
                            app.signup(full_name,email_id,phone_no,password,jdate,spinner_id1,spinner_id2,spinner_id3,spinner_id4)

                            root.manager.transition.direction = "left"
                            app.dialog1()

                MDTextButton:
                    text: "Or click here to Login"
                    color: rgba(0, 0, 200, 255)
                    font_size: "14sp"
                    pos_hint: {"center_x": 0.49, "center_y": 0.04}
                    on_press: root.manager.current='login'
